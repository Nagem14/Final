<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.afinal">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:label="Main Menu Options">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Search"
            android:label="Search">
        </activity>

        <activity
            android:name=".Bulletin"
            android:label="Bulletin">
        </activity>

        <activity
            android:name=".ListEvent"
            android:label="List Bulletin Event">
        </activity>

        <activity
            android:name=".ViewEvents"
            android:label="View All Bulletin Events">
        </activity>

        <activity
            android:name=".ListEventConfirm"
            android:label="Confirmation to List an Event">
        </activity>

        <activity
            android:name=".ViewIndividualEvent"
            android:label="View an Individual Event">
        </activity>

        <activity
            android:name=".EditEvent"
            android:label="Edit an Event">
        </activity>

        <activity
            android:name=".DeleteConfirmation"
            android:label="Confirmation to Delete an Event">
        </activity>

        <activity
            android:name=".EventCodeConfirm"
            android:label="Code Confirmation to Edit/Delete an Event">
        </activity>

        <activity
            android:name=".EditConfirmation"
            android:label="Confirmation to Save Edit an Event">
        </activity>

        <activity
            android:name=".Operations"
            android:label="@string/title_activity_operations"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".Emergency"
            android:label="@string/title_activity_emergency"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".Dining"
            android:label="@string/title_activity_dinning"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".ActivityShuttleSchedule"
            android:label="@string/title_shuttle" />

        <activity android:name=".ShuttleLists"
            android:label="@string/title_shuttle" />
        <activity android:name=".ShuttleWebView"
            android:label="@string/title_shuttle" />


    </application>

</manifest>